  "languageserver": {
    "haxe": {
      "command": "node",
      // "args": ["~/.vscode-oss/extensions/nadako.vshaxe-2.9.2/server/bin/server.js"],
      "args": ["/home/john/code/haxe/vshaxe/server/bin/server.js"],
      "filetypes": ["haxe"],
